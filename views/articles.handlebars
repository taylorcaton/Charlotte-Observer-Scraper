<div class="jumbotron jumbotron-fluid background-image">

    <div class="container">
        <h1 class="display-3 text-center">Charlotte Observer Scraper</h1>
        <hr class="my-2">
        <p class="lead text-center">Observe the Charlotte Observer</p>
    </div>
</div>

<div class="container">
    {{#each article}}
    <div class="card">

        <div class="card-block">
            <div class="card-header bg-light">
                <h4><a href="{{this.link}}" target='_blank'>{{this.title}}</a></h4>

            </div>

            <div class="card-body">

                <p class="card-text">{{this.title}}</p>
                <a class="btn btn-outline-dark" data-objectID='{{this._id}}' href="#">Save Article</a>
            </div>

        </div>

    </div>
    {{/each}}
</div>